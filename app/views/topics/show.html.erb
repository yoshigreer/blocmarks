<h1><%= @topic.title %></h1>
<div class="col-md-8">
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  <div>
    <%= link_to "New Bookmark", new_topic_bookmark_path(@topic) %>

    <% @bookmarks.each do |bookmark| %>
      <h4><%= link_to bookmark.url, topic_bookmark_path(bookmark.topic, bookmark) %></h4>
    <% end %>
  </div>
</div>
